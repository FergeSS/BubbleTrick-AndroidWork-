<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_scene"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="134dp"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="134dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/level_frame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="1"
                android:textSize="20sp"
                android:fontFamily="@font/paytone_one_regular"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="134dp"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="134dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/ball_score_frame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            
            <LinearLayout
                android:layout_width="91dp"
                android:layout_height="27dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <Switch
                    android:id="@+id/live1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:checked="true"
                    android:background="@drawable/lives_sel"
                    android:clickable="false"
                    android:thumbTint="#00FFFFFF"
                    android:trackTint="#00FFFFFF" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Switch
                    android:id="@+id/live2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:clickable="false"
                    android:checked="true"
                    android:background="@drawable/lives_sel"
                    android:thumbTint="#00FFFFFF"
                    android:trackTint="#00FFFFFF" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Switch
                    android:id="@+id/live3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:checked="true"
                    android:clickable="false"
                    android:background="@drawable/lives_sel"
                    android:thumbTint="#00FFFFFF"
                    android:trackTint="#00FFFFFF" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ball"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="100dp"

        android:src="@drawable/ball_score_yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/buble"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/bubble01"
        app:layout_constraintEnd_toEndOf="@id/ball"
        app:layout_constraintStart_toStartOf="@id/ball"
        app:layout_constraintTop_toTopOf="@id/ball"
        app:layout_constraintBottom_toBottomOf="@id/ball"/>

    <ImageView
        android:id="@+id/cube1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="456dp"
        android:rotation="45"
        android:src="@drawable/cube1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cube2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="228dp"
        android:rotation="45"
        android:src="@drawable/cube2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cube3"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="372dp"
        android:rotation="45"
        android:src="@drawable/cube3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="132dp"
        android:layout_height="49dp"
        android:src="@drawable/platform"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/glass"
        android:layout_width="94dp"
        android:layout_height="118dp"
        android:src="@drawable/glass"
        app:layout_constraintBottom_toTopOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9" />

    <ImageButton
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:background="@drawable/home_sel"
        android:onClick="home"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>